{
    "name": "caesar-cli",
    "version": "0.0.1",
    "description": "Caesar cipher CLI app",
    "license": "MIT",
    "engines": {
        "node": "16.x"
    },
    "scripts": {
        "build": "cross-env NODE_ENV=\"development\" TS_NODE_PROJECT=\"tsconfig.json\" webpack --watch",
        "serve": "nodemon ./dist/backend/index.js",
        "dev": "concurrently \"npm run build\" \"npm run serve\"",
        "test": "jest",
        "test:watchAll": "jest --watchAll",
        "test:coverage": "jest --coverage"
    },
    "devDependencies": {
        "@types/jest": "^27.0.1",
        "@types/node": "^16.0.0",
        "@types/webpack": "^5.28.0",
        "@typescript-eslint/eslint-plugin": "^4.28.3",
        "@typescript-eslint/parser": "^4.28.3",
        "concurrently": "^6.2.0",
        "cross-env": "^7.0.3",
        "eslint": "^7.30.0",
        "eslint-plugin-jest": "^24.3.6",
        "eslint-plugin-node": "^11.1.0",
        "jest": "^27.0.6",
        "nodemon": "^2.0.7",
        "ts-jest": "^27.0.3",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "typescript": "^4.3.5",
        "webpack": "^5.42.1",
        "webpack-cli": "^4.7.2"
    }
}
